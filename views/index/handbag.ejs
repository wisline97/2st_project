<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="icon"
      type="image/icon"
      sizes="16x16"
      href="https://www.seoulstore.com/images/favicon/favicon_16px.jpg"
    />
    <link
      rel="icon"
      type="image/icon"
      sizes="32x32"
      href="https://www.seoulstore.com/images/favicon/favicon_32px.jpg"
    />
    <link
      rel="apple-touch-icon"
      sizes="152x152"
      href="https://www.seoulstore.com/images/favicon/favicon_152px.png"
    />
    <script
      src="https://kit.fontawesome.com/0a218c2ef9.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" type="text/css" href="css/reset.css" />
    <link rel="stylesheet" type="text/css" href="css/layout.css" />
    <title>서울스토어</title>
  </head>
  <body>
    <%- include ('../header.ejs') %>
    <section class="product-rank">
      <div class="title">
        <h3>핸드백</h3>
      </div>

      <div class="product-rank-div">
        <% for(i=0; i<prdList.length; i++){ var prd = prdList[i]; var price_sale
        = prd['prd_price'] - (prd['prd_price']*(prd['prd_discount_rate']/100));
        %>
        <form action="addCartPro">
          <div class="product">
            <a href="prdInfo?prd_No=<%=prd['prd_No']%>"
              ><img src=<%=prd['prd_img']%> /></a
            >
            <button onclick="location.href='#'" type="submit" class="go-cart">
              <i class="fa-solid fa-cart-plus fa-lg"></i>
            </button>
            <a href="prdInfo?prd_No=<%=prd['prd_No']%>"
              ><p class="rank-txt-brand"><%=prd['brd_name']%></p></a
            >
            <a href="prdInfo?prd_No=<%=prd['prd_No']%>"
              ><p class="rank-subtxt"><%=prd['prd_name']%></p></a
            >
            <div class="price-container">
              <p class="rank-subtxt price-sale">
                <%=prd['prd_discount_rate']%>% <%=price_sale.toLocaleString()%>
              </p>
              <p class="rank-subtxt price">
                <%=prd['prd_price'].toLocaleString()%>
              </p>
            </div>
            <div class="label">
              <%if (prd['prd_new']){%>
              <div class="new">
                <p>신상</p>
              </div>
              <%} if (prd['prd_sale']){%>
              <div class="sale1">
                <p>세일</p>
              </div>
              <%}%>
            </div>
            <div class="review_score">
              <div class="review_score">
                <i class="fa-solid fa-heart fa-sm"></i>
                <p class="review_score_txt">
                  <%=prd['prd_likesCount'].toLocaleString()%>
                </p>
              </div>
            </div>
          </div>
        </form>
        <%}%>
      </div>
    </section>
    <%- include ('../footer.ejs') %>
  </body>
</html>
